---
// src/pages/500.astro
import Layout from '../layouts/Layout.astro';
const { url } = Astro.request;
const pathname = new URL(url).pathname;
import {Logo} from '@/assets/assets';
import { ServerCrash } from 'lucide-react';
import TriangularBackground from '@/components/react/UI/Animation/TriangularBackground';
import GlowButton from '@/components/react/UI/components/GlowButton';
---

<Layout title="Erreur serveur | KDN">
  <TriangularBackground className='w-full' theme="dark" client:load>
    <main class="min-h-screen pt-39 text-blue-50 flex flex-col items-center justify-center p-2 w-full">
      <div class="w-full max-w-4xl bg-blue-it4a-secondary/10 backdrop-blur-sm rounded-2xl border border-it4a-secondary-700/30 shadow-2xl shadow-blue-900/50 overflow-hidden">
        <div class="text-center py-8 px-4 border-b border-blue-700/30">
          <a href="/" class="inline-block">
            <img src={Logo} alt="ITe4a - Solutions Réseau" width="220" class="mx-auto" />
          </a>
          <h1 class="mt-6 text-3xs md:text-4xl font-bold text-transparent bg-clip-text bg-gradient-to-r from-it4a-primary to-it4a-secondary">
            Erreur 500 : Problème serveur
          </h1>
        </div>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-8 p-6 md:p-10">
          <div class="flex flex-col items-center justify-center">
            <div class="bg-blue-800/30 p-6 rounded-2xl border border-blue-700/30">
              <ServerCrash className='text-it4a-primary' width={248} />
            </div>
            <p class="mt-4 italic text-white/80 text-center">
              Notre serveur rencontre un problème technique...
            </p>
          </div>
          <div class="space-y-6">
            <div class="flex items-center justify-center bg-blue-800/20 p-2 rounded-xl border border-blue-700/30 border-l-4 border-l-red-500">
              <p>
                La requête pour <code class="bg-blue-900/50 px-2 py-1 rounded text-amber-200 font-mono break-all">{pathname}</code> a échoué.
              </p>
            </div>
            <div>
              <h2 class="text-xl font-bold text-it4a-primary mb-4 flex items-center gap-2">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
                  <path fill-rule="evenodd" d="M11.3 1.046A1 1 0 0112 2v5h4a1 1 0 01.82 1.573l-7 10A1 1 0 018 18v-5H4a1 1 0 01-.82-1.573l7-10a1 1 0 011.12-.38z" clip-rule="evenodd" />
                </svg>
                Solutions recommandées :
              </h2>
    
              <div class="grid grid-cols-1 sm:grid-cols-3 gap-3 mb-6">
                <GlowButton href="/" variant='outline' className='flex gap-3 items-center justify-center' client:only>
                  <span>
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 " viewBox="0 0 20 20" fill="currentColor">
                      <path fill-rule="evenodd" d="M9.707 16.707a1 1 0 01-1.414 0l-6-6a1 1 0 010-1.414l6-6a1 1 0 011.414 1.414L5.414 9H17a1 1 0 110 2H5.414l4.293 4.293a1 1 0 010 1.414z" clip-rule="evenodd" />
                    </svg>
                  </span>
                  Accueil
                </GlowButton>
    
                <GlowButton href="/contact" variant='outline' className='flex gap-3 items-center justify-center 'client:only>
                  <span>
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 inline-block" viewBox="0 0 20 20" fill="currentColor">
                      <path d="M2.003 5.884L10 9.882l7.997-3.998A2 2 0 0016 4H4a2 2 0 00-1.997 1.884z" />
                      <path d="M18 8.118l-8 4-8-4V14a2 2 0 002 2h12a2 2 0 002-2V8.118z" />
                    </svg>
                  </span>
                  Support
                </GlowButton>
    
                <GlowButton href="/status" variant='outline' className='flex gap-3 items-center justify-center 'client:only>
                  <span>
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
                      <path fill-rule="evenodd" d="M2.166 4.999A11.954 11.954 0 0010 1.944 11.954 11.954 0 0017.834 5c.11.65.166 1.32.166 2.001 0 5.225-3.34 9.67-8 11.317C5.34 16.67 2 12.225 2 7c0-.682.057-1.35.166-2.001zm11.541 3.708a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                    </svg>
                  </span>
                    service
                </GlowButton>
              </div>

            </div>
          </div>
        </div>
      </div>
    </main>
  </TriangularBackground>
</Layout>