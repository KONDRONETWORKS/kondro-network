---
import Layout from "@/layouts/Layout.astro";
import  services  from "@/contents/servicesData";
import { CheckCircle2 } from "lucide-react";
import GlowButton from "@/components/react/UI/components/GlowButton";
import ScrollReveal from "@/components/react/UI/Animation/ScrollReveal";

const { slug } = Astro.params;
const service = services.find(s => s.slug === slug);

if (!service) {
  throw new Error(`Service introuvable: ${slug}`);
}
---

<Layout>
  <section class="w-full  flex flex-col flex-wrap justify-center px-4 py-40 md:py-50 md:px-20    text-sm md:text-xl space-y-3">
    <div class="flex items-center gap-4 mb-8">
      <div class="bg-it4a-secondary p-4  rounded-2xl border-2 border-it4a-primary shadow-md shadow-amber-50">
        <service.icon className="w-10 h-10 text-it4a-primary " />
      </div>
      <h1 class="text-2xl md:text-3xl font-bold text-transparent bg-clip-text bg-gradient-to-r from-it4a-primary to-it4a-secondary">{service.label}</h1>
    </div>

    <p class="text-gray-100 text-lg mb-8">{service.description}</p>

    <ul class="space-y-3">
      {service.details.map(item => (
          <li class="flex items-start gap-3 backdrop-blur-2xl backdrop-brightness-50  p-4 rounded-xl border-1 border-it4a-primary shadow-2xs shadow-white">
            <span class="text-it4a-primary ">
              <CheckCircle2/>
            </span>
            <span class="text-gray-100">{item}</span>
          </li>
      ))}
    </ul>

    <div class="flex flex-col flex-1/2 w-full md:max-w-2xl   md:flex-row flex-wrap md:gap-5  gap-2 text-xs md:text-sm ">
      <GlowButton  className="flex-1"  href="/services"   variant="outline">  ‚Üê Retour aux services </GlowButton>
      <GlowButton  className="flex-1"  href="/contact " >  En savoir Plus </GlowButton>
    </div>
  </section>
</Layout>
